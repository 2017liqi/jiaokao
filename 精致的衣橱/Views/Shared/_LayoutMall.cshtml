                <a href="#" title="我的购物车"><img src="~/iconfont/购物车.png" class="img2" /></a>
                <a href="#" title="我的订单"><img src="~/iconfont/订单.png" class="img3" /></a>
            </div>
            <br />
            <br />
</div>

    <div style="margin-top:10px">
        @RenderBody()
    </div>
    <div class="container">
        <ul>
            <li>

            </li>
        </ul>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
