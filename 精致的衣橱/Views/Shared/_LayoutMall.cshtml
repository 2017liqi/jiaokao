<script>
    $(function () {
       
        $(window).scroll(function () {
            var height = $(document).scrollTop();
            if (height != 0) {
                $("#toTop").show();
            }
            else
                $("#toTop").hide();
        })
        $("#toTop").click(function () {
            scrollTo(0, 0);
        })
    })
    
</script>