<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Images/yichu/qqq.ico" />
    <style>
        /*.userinfobox {
           margin-left: 80px;
        }*/
        .daohangimg {
            height: 50px;
            width: 50px;
            border-radius: 50%;
            vertical-align: baseline;
            background-color: #f5f5f5;
            
        }
        .zong-nav {
           position: fixed;
           top: 0px;
           left: 0px;
           height: 56px;
           width: 100%;
           background-color: #fff;
           z-index: 99;
           font-family: 'Roboto Mono', monospace;
           font-size: 18px;
           /*top: 0px;*/
        }
        .container {
          width: 76%;
          /*margin-left: auto;
          margin-right: auto;*/
        }
       .zong-nav .nav li {
           display: inline-block;
           width: 146px;
           height: 20px;
        }
        .nav li:first-child {
            font-size: 16px;
            font-weight: 600;
        }
        .nav {
            float: left
        }
        .nav li a {
           text-decoration: none;
           color:black;
        }
        .nav-r {
            float: right;
        }
        .ji {
             height:50px;
             width:100%;
        }
        /*#tx {
        width: 101px;
        height: 50px;
        float: right;
        margin-top: -50px;
        /*border: 1px solid #ffffff;*/
        /*border: none;
        margin-right: 120px;
        border-radius: 10px;
    }*/

    /*#zx {
        
        right: -80px;
        top: -10px;
    }*/
    </style>
</head>
<body>
    <div class="zong-nav">
        <div class="container">
            <div class="nav">
                <ul>
                    <li>精致的衣橱</li>
                    <li><a href="@Url.Action("Index1","Home")">首页</a></li>
                    <li><a href="@Url.Action("Index","YiChu",new {Userid= @Session["User_id"]})">我的衣橱</a></li>
                    <li><a href="@Url.Action("Index","YiChuShow")">衣橱秀场</a></li>
                    <li><a href="@Url.Action("Index","Mall")">购物中心</a></li>
                    <li><a href="@Url.Action("RecomGoods","Recommend")">个性推荐</a></li>
                    <li></li>
                
                </ul>
            </div>
            
            
            <div class="nav-r">
                <div class="login-out">
                    <div class="login">
                        @if (Session["User_id"] != null)
                        {
                          
                                <a href="@Url.Action("Index","YiChu",new {Userid= @Session["User_id"]})"><img class="daohangimg" src="/Images/HeadImages/@Session["User_image"]" style="height:50px;width:50px;" id="pc" /></a>
                                @*<button id="zx">注销</button>*@
                        }
                        else
                        {
                            <a href="@Url.Action("RegisterLogin", "Users")">
                                <img class="daohangimg" src="~/Images/yichu/wode.png" />
                            </a>
                        }
                    </div>
                    <div class="logout"></div>
                </div>
                <div class="zoom"></div>
            </div>
        </div>
    </div>
    <div class="ji"></div>
    <div>
        @RenderBody()
    </div>
</body>
</html>






