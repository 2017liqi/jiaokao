        </div>

        <div id="p3">
            @*@{Html.RenderAction("Reply", "Mall", new {commentid=@p.GoodsCommentID});}*@
            @Html.Action("Reply", "Mall", new { commentid = @p.GoodsCommentID });
        </div>
    }
</div>

