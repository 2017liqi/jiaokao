@model IEnumerable<Models.Video>

<style>
    img {
        width: 100px;
        height: 80px;
    }

    .intro {
        display: inline-block;
        width: 160px;
       font-size: 12px;
       color: #999;
       font-family: Arial, Helvetica, sans-serif;
    }
    .intro p {
        line-height: 22px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .intro p:first-child {
        color: #333;
    }
    a {
        text-decoration: none;
        color: #999;
    }
</style>
@foreach (var item in Model)
{
  <div class="wai">
      <a href="@Url.Action("VideoDetail", "YiChuShow",new { id=@item.VideoID})">
          <img src="~/Images/videoimg/@item.Image" />
          <div class="intro">
              <p>@item.Title</p>
              <p>@item.Time</p>
              <a href="@Url.Action("Userhome", "YiChuShow", new {id=@item.UserID})">by @item.Users.UserName</a>
          </div>
      </a>
    </div>
}

