@model 精致的衣橱.Models.YiChuShowViewModel
@{
    Layout = "~/Views/Shared/_LayoutDaohang.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title> 
    <link href="~/Content/normalize.css" rel="stylesheet" />
    <link href="~/Content/demo.css" rel="stylesheet" />
    <script>document.documentElement.className = 'js';</script>
    <style>
        body {
            background-color: #f2f2f2;
            font-size: 20px;
        }
        .control__item {
            display: inline-block;
            width: 255px;
            height: 300px;
            /*background-image: url('../../Images/yichu/麋鹿素材.jpg');*/
        }
        .control__item:hover .control__label{
                color: #d27171!important;
                font-size: 24px;
       }
        .control__label ,
        .control__item a {
            display: inline-block;
            width: 265px;
            /*height: 200px;*/
            line-height: 232px;
        }
       
        main .content{
            margin: 0 auto;
        }
        .control--grids {
            margin: -21px 0px 2.5em;
            /*text-align: right;*/
            background-color: white;
            border-top: 28px solid #f2f2f2;
            height: 260px;
            text-align: center;
            /*letter-spacing: 10px;*/
            font-size: 20px;
        }
        .control__radio:checked + .control__label {
            color: #fff;
            background: #ff006e;
        }
        /********************Title开始****************************/
        .g-title {
            width: 100%;
            overflow: hidden;
            height: 85px;
            margin: 26px 0 40px;
        }
            .g-title .title {
                height: 38px;
                background: url("../../Images/yichu/line-black.png") repeat-x left 18px;
                width: 526px;
                margin: 0 auto 10px;
            }
        .g-title .links {
            text-align: center;
            padding: 10px 0 0;
            color: #b5b5b5;
        }
        .links a {
           color: #000;
        }
        .g-title .title strong.hotnote {
            background-position: center -6px;
        }
        .g-title .title strong.hotvideo {
            background-position: center -137px;
        }
        .g-title .title strong.newnote {
            background-position: center -77px;
        }
        .g-title .title strong.newvideo {
            background-position: center -216px;
        }
            .g-title .title strong {
                display: block;
                overflow: hidden;
                margin: 0 auto;
                height: 46px;
                width: 374px;
                background-image: url('../../Images/yichu/title.png');
                background-repeat: no-repeat;
                background-color: #f3f3f3;
            }
        .g-title .title strong a {
            display: block;
            height: 38px;
            width: 374px;
            float: left;
            overflow: hidden;
            text-indent: -550px;
        }
        /*******************Title结束****************************/
    </style>
</head>
<body class="loading">
        @*<img src="~/Images/yichu/火狐截图_2019-06-13T09-06-36.916Z.png" />*@
        <div class="control control--grids">
            <div class="control__item">
                <input class="control__radio" type="radio" name="grid-type" value="grid--type-a" id="control-grid-a" checked>
                <label class="control__label" for="control-grid-a" style="background-image: url('../../Images/banner/1.1.jpg');background-size: cover;color: white;">热门笔记</label>
            </div>
            <div class="control__item">
                <input class="control__radio" type="radio" name="grid-type" value="grid--type-b" id="control-grid-b">
                <label class="control__label" for="control-grid-b" style="background-image: url('../../Images/banner/2.1.jpg');background-size: cover;color: white;">热门视频</label>
            </div>
            <div class="control__item">
                <input class="control__radio" type="radio" name="grid-type" value="grid--type-c" id="control-grid-c">
                <label class="control__label" for="control-grid-c" style="background-image: url('../../Images/banner/3.1.jpg');background-size: cover;color: white;">最新笔记</label>
            </div>
            <div class="control__item">
                <input class="control__radio" type="radio" name="grid-type" value="grid--type-d" id="control-grid-d">
                <label class="control__label" for="control-grid-d" style="background-image: url('../../Images/banner/4.1.jpg');background-size: cover;color: white;">最新视频</label>
            </div>
            <div class="control__item">
                <a href="@Url.Action("UpNote","YiChuShow")" style="background-image: url('../../Images/banner/5.1.jpg');background-size: cover;color: white;">发表笔记</a>
            </div>
            <div class="control__item">
                <a href="@Url.Action("UpVideo","YiChuShow")" style="background-image: url('../../Images/banner/6.1.1.jpg');background-size: cover;color: white;">上传视频</a>
            </div>
                @******************userid要改成session 用户id**************************@
                @*<a href="@Url.Action("Userhome","YiChuShow",new { userid=1})">
                    <img src="~/Images/HeadImages/1.jpg" style="height:50px;width:50px;" />
                </a>*@
            </div>
        <main>
            <div class="content content--center">        
                <div class="grid grid--type-a">
                    <div class="grid__sizer"></div>
                    <div class="g-title">
                        <div class="title">
                        <strong class="hotnote">
                            <a href="#">时装</a>
                         </strong></div>
                        <div class="links">
                            <a href="#">首页</a><span>|</span><a href="@Url.Action("Userhome","YiChuShow",new { userid=Session["User_id"]})">个人中心</a>
                        </div>
                    </div>
                    <div style="position: relative">
                        @foreach (var n in Model.JingXuanNote)
                        {
                            <div class="grid__item">
                                <a class="grid__link" href="@Url.Action("NoteDetail", "YiChuShow", new {id=@n.NoteID})">
                                    <img class="grid__img" src="/Images/Noteimg/@n.Img" alt="Some image" />
                                </a>
                            </div>
                        }
                    </div>
                </div>
              
                <div class="grid grid--type-b">
                    <div class="grid__sizer"></div>
                    <div class="g-title">
                        <div class="title">
                            <strong class="hotvideo">
                                <a href="#">时装</a>
                            </strong>
                        </div>
                        <div class="links">
                            <a href="#">首页</a><span>|</span><a href="#">个人中心</a>
                        </div>
                    </div>
                    <div style="position: relative">
                        @foreach (var n in Model.JingXuanVideo)
                        {
                            <div class="grid__item">
                                <a class="grid__link" href="@Url.Action("VideoDetail", "YiChuShow", new {id=@n.VideoID})">
                                    <img class="grid__img" src="/Images/Noteimg/@n.Image" alt="Some image" />
                                    <span>@n.likenum</span>
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="grid grid--type-c">
                    <div class="grid__sizer"></div>
                    <div class="g-title">
                        <div class="title">
                            <strong class="newnote">
                                <a href="#">时装</a>
                            </strong>
                        </div>
                        <div class="links">
                            <a href="#">首页</a><span>|</span><a href="#">个人中心</a>
                        </div>
                    </div>
                    <div style="position: relative">
                        @foreach (var n in Model.NewNote)
                        {
                            <div class="grid__item">
                                <a class="grid__link" href="@Url.Action("NoteDetail", "YiChuShow", new {id=@n.NoteID})">
                                    <img class="grid__img" src="/Images/Noteimg/@n.Img" alt="Some image" />
                                </a>
                            </div>
                        }
                    </div>
                </div>
                <div class="grid grid--type-d">
                    <div class="grid__sizer"></div>
                    <div class="g-title">
                        <div class="title">
                            <strong class="newvideo">
                                <a href="#">时装</a>
                            </strong>
                        </div>
                        <div class="links">
                            <a href="#">首页</a><span>|</span><a href="#">个人中心</a>
                        </div>
                    </div>
                    <div style="position: relative">
                        @foreach (var n in Model.NewVideo)
                        {
                            <div class="grid__item">
                                <a class="grid__link" href="@Url.Action("VideoDetail", "YiChuShow", new {id=@n.VideoID})">
                                    <img class="grid__img" src="/Images/Noteimg/@n.Image" alt="Some image" />
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </main>
    <script src="~/Scripts/imagesloaded.pkgd.min.js"></script>
    <script src="~/Scripts/masonry.pkgd.min.js"></script>
    <script src="~/Scripts/anime.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    </body>
</html>
