
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddClothes</title>
    <link href="~/Content/zyUpload.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <!-- 引用核心层插件 -->
    <script src="~/Scripts/zyFile.js"></script>
    <!-- 引用控制层插件 -->
    <script src="~/Scripts/zyUpload.js"></script>
    <!-- 引用初始化JS -->
    <script src="~/Scripts/jq22.js"></script>
    <style>
        body {
           background: url('../../Images/yichu/lu.jpg') no-repeat;
           background-size: cover;
        }
        .container {
            margin:20px auto;
            background-color:#f5f5f5;
            height:600px;
            width:680px;

        }
    </style>
</head>
<body >
    <div class="container"> 
        <div id="demo" class="demo">
            <p>颜色选择框</p>
            <div>
                <form>
                    <input type="radio" name="color" value="red">红
                    <input type="radio" name="color" value="write">白
                    <input type="radio" name="color" value="mi">米
                    <input type="radio" name="color" value="black">黑
                    <input type="radio" name="color" value="yellow">黄
                    <input type="radio" name="color" value="blue">蓝
                    <input type="radio" name="color" value="green">绿
                    <input type="radio" name="color" value="orange">橙
                    <input type="radio" name="color" value="zi">紫
                    <input type="radio" name="color" value="hui">灰
                    <input type="radio" name="color" value="zong">棕
                </form>
            </div>
            <p>款式选择框</p>
         
            <div id="yifu">
                <form>
                    <span>上单衣</span>
                    <input type="radio" name="yifu" value="chenshan">衬衫
                    <input type="radio" name="yifu" value="lianmao">连帽卫衣
                    <input type="radio" name="yifu" value="yuanwei">圆领卫衣
                    <input type="radio" name="yifu" value="txue">T恤
                    <input type="radio" name="yifu" value="diaodai">吊带<br />
                    <span>外&nbsp;&nbsp;&nbsp;&nbsp;套</span>
                    <input type="radio" name="yifu" value="bangqiufu">棒球服
                    <input type="radio" name="yifu" value="fengyi">风衣
                    <input type="radio" name="yifu" value="zhenzhi">针织开衫
                    <input type="radio" name="yifu" value="niuzai">牛仔<br />
                    <span>下&nbsp;&nbsp;&nbsp;&nbsp;衣</span>
                    <input type="radio" name="yifu" value="chaoduan">超短裤
                    <input type="radio" name="yifu" value="duanqun">短裙
                    <input type="radio" name="yifu" value="changqun">中长裙
                    <input type="radio" name="yifu" value="changku">长裤<br />
                    <span>套&nbsp;&nbsp;&nbsp;&nbsp;装</span>
                    <input type="radio" name="yifu" value="taozhaung">套装
                </form>
            </div>

            <p>材质选择框</p>
            <form>
                <input type="radio" name="material" value="pige">皮革
                <input type="radio" name="material" value="xuefang">雪纺
                <input type="radio" name="material" value="mianma">棉麻
                <input type="radio" name="material" value="mian">棉
                <input type="radio" name="material" value="sichou">丝绸
                <input type="radio" name="material" value="nirong">呢绒
                <input type="radio" name="material" value="niuza">牛仔
            </form>
            <p>季节</p>
            <form>
                <input type="radio" name="season" value="pige">春季
                <input type="radio" name="season" value="xuefang">夏季
                <input type="radio" name="season" value="mianma">秋季
                <input type="radio" name="season" value="mian">冬季
            </form>
       </div>
    </div>
</body>
</html>
